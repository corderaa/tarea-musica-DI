<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/dropDown"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="367dp"
        android:layout_marginBottom="897dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/down_chevron_9144316" />

    <ImageView
        android:id="@+id/More"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginStart="369dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="897dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/more_5703560" />

    <ImageView
        android:id="@+id/songCover"
        android:layout_width="353dp"
        android:layout_height="409dp"
        app:layout_constraintBottom_toTopOf="@+id/songTItle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropDown"
        app:srcCompat="@drawable/song_cover_1" />

    <ImageView
        android:id="@+id/dislike"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="386dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songCover"
        app:srcCompat="@drawable/dislike_3570004" />

    <ImageView
        android:id="@+id/like"
        android:layout_width="43dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="386dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songCover"
        app:srcCompat="@drawable/likegesture_3569999" />

    <TextView
        android:id="@+id/songTItle"
        android:layout_width="167dp"
        android:layout_height="46dp"
        android:text="Matte Back"
        android:textAlignment="center"
        android:textSize="30.sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bandName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songCover" />

    <TextView
        android:id="@+id/bandName"
        android:layout_width="161dp"
        android:layout_height="28dp"
        android:text="$uicideboy$"
        android:textAlignment="center"
        android:textSize="15.sp"
        app:layout_constraintBottom_toTopOf="@+id/songTimeProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songTItle" />

    <ProgressBar
        android:id="@+id/songTimeProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="325dp"
        android:layout_height="16dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="330dp"
        android:progress="25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bandName" />

    <ImageView
        android:id="@+id/PreviousButton"
        android:layout_width="67dp"
        android:layout_height="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/playButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shareSong"
        app:layout_constraintTop_toBottomOf="@+id/songTimeProgressBar"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/back_7881760" />

    <ImageView
        android:id="@+id/NextSong"
        android:layout_width="65dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Lyrics"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/playButton"
        app:layout_constraintTop_toBottomOf="@+id/songTimeProgressBar"
        app:layout_constraintVertical_bias="0.301"
        app:srcCompat="@drawable/next_7881819" />

    <TextView
        android:id="@+id/RestTime"
        android:layout_width="29dp"
        android:layout_height="24dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="667dp"
        android:layout_marginEnd="357dp"
        android:layout_marginBottom="306dp"
        android:text="1:08"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="360dp"
        android:layout_marginTop="667dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="311dp"
        android:text="3:58"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/VolumeBar"
        android:layout_width="316dp"
        android:layout_height="21dp"
        android:layout_marginTop="893dp"
        android:layout_marginBottom="83dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/shareSong"
        android:layout_width="45dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PreviousButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songTimeProgressBar"
        app:layout_constraintVertical_bias="0.301"
        app:srcCompat="@drawable/share_4362289" />

    <ImageView
        android:id="@+id/Lyrics"
        android:layout_width="43dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/NextSong"
        app:layout_constraintTop_toBottomOf="@+id/songTimeProgressBar"
        app:layout_constraintVertical_bias="0.308"
        app:srcCompat="@drawable/favourite_3675578" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="80dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/NextSong"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/PreviousButton"
        app:layout_constraintTop_toBottomOf="@+id/songTimeProgressBar"
        app:layout_constraintVertical_bias="0.295"
        app:srcCompat="@drawable/play_12052806" />

</androidx.constraintlayout.widget.ConstraintLayout>